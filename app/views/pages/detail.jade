extend ../layout

block content
	.container
		.row
			.col-md-7
				if(movie.attribute ==='false' )
					video.video-js.vjs-default-skin(controls,preload="auto",width="720", height="500")
						source(src = "#{movie.flash}", type = "video/mp4")
				else
					embed(src = "#{movie.flash}",allowFullScreen = "true", quality = "high", width = "720",height = "500", align = "middle", type = "application/x-shockwave-flash",flashvars="proxyid=1&namespace=FlashProxy")
				hr.divider
				h4 下载: &nbsp;&nbsp;&nbsp;
					a.glyphicon.glyphicon-save(href=movie.flash,role='button')
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd #{movie.title}
					dt 导演
					dd #{movie.doctor}
					dt 国家
					dd #{movie.country}
					dt 语言
					dd #{movie.language}
					dt 上映年份
					dd #{movie.year}
					dt 简介
					dd #{movie.summary}