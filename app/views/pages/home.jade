doctype html
head
    meta(cahsrset = "utf-8")
    title #{title}
    include ../includes/head
body.home
    nav.navbar.navbar-inverse.navbar-fixed-top(role = "navigation")
        .container-fluid
        .navbar-header
            a.navbar-brand(href = "/")
                img(alt = "Brand", src = "/image/brand.jpg",width = 30, height = 30)
            button.navbar-toggle.collapsed(type = "button", data-toggle="collapse", data-target = "#bs-example-navbar-collapse-1")
                span.sr-only Toggle Navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
        .collapse.navbar-collapse(id = "bs-example-navbar-collapse-1")
            ul.nav.navbar-nav
                li.home
                    a(href = "/") 首页
                li.index
                    a(href = "/index/") 主页
                li.themelist
                    a.dropdown-toggle(href = "#", data-toggle = "dropdown", role = "button", aria-haspopup = "true", aria-expanded = "false") 主题
                    ul.dropdown-menu
                        li
                            a.theme(href = "/index/science") 科幻
                        li
                            a.theme(href = "/index/comedy") 喜剧
                        li
                            a.theme(href = "/index/newest") 最新
                        li
                            a.theme(href = "/index/terror") 恐怖
                        li
                            a.theme(href = "/index/love") 爱情
                        li
                            a.theme(href = "/index/asume") 娱乐
                        li
                            a.theme(href = "/index/action") 动作
                        li
                            a.theme(href = "/index/drama") 剧情
                        li
                            a.theme(href = "/index/war") 战争
                        li
                            a.theme(href = "/index/anime") 动画
                        li
                            a.theme(href = "/index/other") 其他
            if user
                p.navbar-text.navbar-right
                    span 欢迎您,#{user.name}
                    span &nbsp; |&nbsp
                    a.navbar-link(href = "/user/logout") 登出
                    span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp
                if (user.role >10)
                    ul.nav.navbar-nav
                        li.list
                            a(href = "/admin/movie/list") 电影列表
                        li.list
                            a(href = "/admin/user/list") 用户列表
                        li.submit
                            a(href = "/admin/movie") 录入                    
            else
                p.navbar-text.navbar-right
                    a.navbar-link(href = "/user/showsignup") 注册
                    span &nbsp; |&nbsp
                    a.navbar-link(href = "/user/showsignin") 登录
                    span &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp
            ul.nav.navbar-nav
                li.about
                    a(href = "#", data-toggle = "modal", data-target = "#about") 关于
    .carousel.slide(data-ride = "carousel", id = "carousel-example-generic")
        ol.carousel-indicators
            li.active(data-target="#carousel-example-generic" data-slide-to="0")
            li(data-target="#carousel-example-generic" data-slide-to="1")
            li(data-target="#carousel-example-generic" data-slide-to="2")
        .carousel-inner(fole = "listbox")
            .item.active
                img(src = "/image/pic3.jpg", alt = "1 slide")
                .carousel-caption
                    h3 欢迎大家
            .item
                img(src = "/image/pic2.jpg", alt = "2 slide")
                .carousel-caption
                    h3 欢迎大家
            .item
                img(src = "/image/pic1.jpg", alt = "3 slide")
                .carousel-caption
                    h3 欢迎大家
        a.left.carousel-control(href = "#carousel-example-generic", role = "button", data-slide = "prev")
            span.glyphicon.glyphicon-chevron-left(aria-hidden = "true")
            span.sr-only Previous
        a.right.carousel-control(href = "#carousel-example-generic", role = "button", data-slide = "next")
            span.glyphicon.glyphicon-chevron-right(aria-hidden = "true")
            span.sr-only Next