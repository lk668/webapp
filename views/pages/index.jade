extend ../layout

block content
	.container
		.row
			each item in movies
				.col-md-2
					.thumbnail
						a(href = "/movie/#{item._id}")
							img(src = "#{item.poster}", alt = "#{item.title}",height = "100")
						.caption
							h3(align = "center") #{item.title}
							p(align = "center"): a.btn.btn-primary(href = "/movie/#{item._id}", role = "button")  Play
